<?xml version="1.0"?>
<launch>
  <arg name="gui" default="False" />
  <param name="use_gui" value="$(arg gui)"/>

  <include file="$(find realsense2_camera)/launch/rs_rgbd.launch" />

  <!-- Personalized version of $(find apriltags2_ros)/launch/continuous_detection.launch -->
  <arg name="launch_prefix" default="" />
  <arg name="node_namespace_april" default="apriltags2_ros_continuous_node_april" />
  <rosparam command="load" file="$(find apriltags2_ros)/config/settings.yaml" ns="$(arg node_namespace_april)" />
  <rosparam command="load" file="$(find core)/config/apriltags.yaml" ns="$(arg node_namespace_april)" />

  <node pkg="apriltags2_ros" type="apriltags2_ros_continuous_node" name="$(arg node_namespace_april)" clear_params="true" output="screen" launch-prefix="$(arg launch_prefix)" >
    <remap from="image_rect" to="/camera/color/image_rect_color" />
    <remap from="camera_info" to="/camera/color/camera_info" />
    <param name="camera_frame" type="str" value="nn1_camera_color_optical_frame" />
    <param name="publish_tag_detections_image" type="bool" value="true" />
  </node>
</launch>
